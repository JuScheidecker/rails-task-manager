<h1>Edit#show</h1>

<%= link_to "Back to your todo list", tasks_path %>

<h3>name : <%=@task.name%></h3>
<h3>description : <%=@task.description%></h3>

<%= form_for(@task) do |f| %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit %>
<% end %>


