<h1>Tasks#index</h1>

<%= link_to "Create a new task", new_task_path %>
  <br>
  <br>

<% @tasks.each do |task| %>
  <h2><%= task.name %></h2>
  <p><%= task.description %></p>
  <%= link_to "See task details", task_path(task) %>
  <%= link_to "Edit task", edit_task_path(task) %>
  <%= link_to "Delete task", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>

<% end %>

